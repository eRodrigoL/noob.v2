{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // Configuração do caminho base para os imports
    "baseUrl": "./src",
    // Definição dos aliases de caminho
    "paths": {
      // Alias: aliases servem como encurtadores de rotas a partir da raiz do aplicativo
      "@/*": ["./*"],
      "@screens/*": ["screens/*"]
    }
  }
}
